{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    // "rootDir": "./src",
    // "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  }
}

